on: [push]

jobs:
  main:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v3
      - name: Install Flutter SDK
        uses: mobiledevops/flutter-sdk-action@v1.0.0
        with:
          flutter-sdk-version: 3.7.7
      - run: flutter --version
      - run: flutter doctor
      - run: flutter pub get
      - run: flutter analyse
      - run: flutter test
